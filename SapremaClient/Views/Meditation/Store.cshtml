
@{
    ViewData["Title"] = "Store";
}

<h1>Store</h1>
<hr class="heading-rule"/>
<div class="row">
    <div class="store-heading col-xs-10 col-xs-offset-1 col-sm-10 col-xs-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
            <label for="MeditationName">Meditation Name</label>
            <input type="text" class="form-control" id="MeditationName" />
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
            <label for="MeditationCreator">Meditation Creator</label>
            <input type="text" class="form-control" id="MediationCreator" />
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label for="MeditationTheme">Meditation Theme</label>
            <select class="form-control" id="MeditationTheme">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label for="MeditationType">Meditation Type</label>
            <select class="form-control" id="MeditationType">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2 search-button text-center">
            <button class="btn btn-default button-medium" id="searchMeditations"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
        </div>
    </div>
</div>
<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-xs-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 store-items">
    <!--
        *************** Code below is for AJAX
    -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            meditation name goes here<br />
            meditation creator goes here
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 store-rating">
            <fieldset class="rating">
                <input type="radio" id="star5" name="rating" value="5" disabled /><label class="full" for="star5" title="5 stars"></label>
                <input type="radio" id="star4" name="rating" value="4" disabled /><label class="full" for="star4" title="4 stars"></label>
                <input type="radio" id="star3" name="rating" value="3" checked disabled /><label class="full" for="star3" title="3 stars"></label>
                <input type="radio" id="star2" name="rating" value="2" disabled /><label class="full" for="star2" title="2 stars"></label>
                <input type="radio" id="star1" name="rating" value="1" disabled /><label class="full" for="star1" title="1 star"></label>
            </fieldset>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 text-center review-link">
            reviews
        </div>
        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 text-center store-details">
            <button class="btn btn-default button-medium"><i class="fa fa-info" aria-hidden="true"></i> Details</button>
        </div>
    </div>
    <hr />
</div>
<script type="text/javascript" src="~/js/MeditationStore.js"></script>

