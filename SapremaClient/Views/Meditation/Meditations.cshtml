
@{
    ViewData["Title"] = "Meditations";
}

<h1>Meditations</h1>
<hr class="heading-rule" />
<div class="meditaiton-list col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">

</div>

<div id="meditation-display" class="overlay">
    <div class="overlay-content">
        <img id="play-meditation-image" class="img-responsive center-block" width="25%" src="../images/logo.svg" /><br />
        <p class="player-text" id="meditation-text"></p>
        <div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-5"><input id="vol-control" type="range" min="0" max="100" step="1" value="100" oninput="SetVolume(this.value)" onchange="SetVolume(this.value)"></input></div>
            </div> 
            <a href="javascript:void(0)" onclick="hideDisplay()" id="stop-button"><p class="fa fa-stop-circle-o" aria-hidden="true"></p></a>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Meditations.js"></script>


