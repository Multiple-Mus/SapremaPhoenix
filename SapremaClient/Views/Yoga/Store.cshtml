
@{
    ViewData["Title"] = "Store";
}

<h1>Store</h1>
<hr class="heading-rule" />
<div class="row">
    <div class="store-heading col-xs-10 col-xs-offset-1 col-sm-10 col-xs-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
            <label for="ClassName">Class Name</label>
            <input type="text" class="form-control auto-search" id="ClassName" />
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
            <label for="ClassCreator">Class Creator</label>
            <input type="text" class="form-control" id="MediationCreator" />
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label for="ClassTheme">Class Theme</label>
            <select class="form-control" id="ClassTheme">
                <option value="">Pick Theme</option>
            </select>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label for="ClassLevel">Class Type</label>
            <select class="form-control" id="ClassLevel">
                <option value="">Pick Level</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2 search-button text-center">
            <button class="btn btn-default button-medium" id="searchClasss" onclick="searchClasss()"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
        </div>
    </div>
</div>
<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-xs-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 store-items">
</div>
<script type="text/javascript" src="~/js/YogaStore.js"></script>

