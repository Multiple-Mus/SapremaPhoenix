
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr class="heading-rule" />
<div class="col-xs-10 xol-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
    <button class="btn btn-default button-medium" onclick="showUser()" id="updateGroup">User</button>
    <button class="btn btn-default button-medium" onclick="showRandom() " id="updateGroup">Random</button>
    <div id="pose-list">
    </div>
    <div id="random-generate">
        random
    </div>
    <div id="breathOptionsUser">
        <label class="checkbox-inline"><input type="checkbox" id="pranayama" onclick="pranayama()" value="">Pranayama</label>
        <label class="checkbox-inline"><input type="checkbox" id="shavasana" onclick="shavasana()" value="">Shavasana</label>
    </div>
    <div id="breathOptionsRandom">
        <label class="checkbox-inline"><input type="checkbox" id="pranayamaRandom" value="">Pranayama</label>
        <label class="checkbox-inline"><input type="checkbox" id="shavasanaRandom" value="">Shavasana</label>
    </div>
</div>
<div class="col-xs-10 xol-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-0 col-lg-4" id="fullclass">
    <h4>Class Poses</h4>
    <span id="success">Class Created</span>
    <div id="classPranayama"></div>
    <div id="class-pose"></div>
    <div id="classShavasana"></div>
    <div>
        <button class="btn btn-default button-medium" onclick="saveClass()" id="saveClass">Save</button>
        <button class="btn btn-default button-medium" onclick="clear()" id="clearClass">Clear</button>
    </div>
</div>

<script type="text/javascript" src="~/js/Create.js"></script>

