
@{
    ViewData["Title"] = "Practice";
}

<h1>Practice</h1>
<hr class="heading-rule" />
<div class="meditaiton-list col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
    <h1>User Classes</h1>
    <hr class="heading-rule" />
    <div id="userclasses"></div>
    <h1>Group Classes</h1>
    <hr class="heading-rule" />
    <div id="groupclasses"></div>
</div>

<div id="class-display" class="overlay">
    <div class="overlay-content">
        <img id="play-class-image" class="img-responsive center-block" width="25%" src="../images/logo.svg" /><br />
        <p class="player-text" id="class-text"></p>
        <div>
            <input id="vol-control" type="range" min="0" max="100" step="1" width="100px" value="100" oninput="SetVolume(this.value)" onchange="SetVolume(this.value)"></input>
            <a href="javascript:void(0)" onclick="hideDisplay()" id="stop-button"><p class="fa fa-stop-circle-o" aria-hidden="true"></p></a>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Practice.js"></script>

